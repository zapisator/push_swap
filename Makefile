#------------------------------------MISC--------------------------------------#
.PHONY:				all clean fclean re 

#---------------------------------DIRECTORIES----------------------------------#
PS_DIR			=	./calculator/
CH_DIR			=	./checker_dir/
#---------------------------------SOURCE_FILES---------------------------------#
#-------------------------------COMPILER_OPTIONS-------------------------------#
#------------------------------------RULES-------------------------------------#
all:				
					make -C $(CH_DIR); \
make -C $(PS_DIR)

clean:
					make clean_this -C $(PS_DIR); \
make clean -C $(CH_DIR)


fclean:
					make fclean_this -C $(PS_DIR); \
make fclean -C $(CH_DIR)

re:					fclean all
